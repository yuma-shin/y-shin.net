---
import WidgetLayout from './WidgetLayout.astro'

import { i18n } from '../../i18n/translation'
import I18nKey from '../../i18n/i18nKey'

const COLLAPSED_HEIGHT = '7.5rem'

interface Props {
  class?: string
  style?: string
}
const className = Astro.props.class
const style = Astro.props.style

const certificates = [
  {
    title: "mabl Skills Certification: Non-functional Testing",
    issuer: "mabl",
    date: "2025/11",
    link: "https://verify.skilljar.com/c/u5egm7wkybb3",
  },
  {
    title: "mabl Skills Certification: Advanced ",
    issuer: "mabl",
    date: "2025/11",
    link: "https://verify.skilljar.com/c/t7k34u9r7njw",
  },
  {
    title: "mabl Skills Certification: Foundations",
    issuer: "mabl",
    date: "2025/10",
    link: "https://verify.skilljar.com/c/ofzvb8wd5d76",
  },
  {
    title: "GENERAL 2024#2",
    issuer: "JDLA Deep Learning",
    date: "2024/03",
  },
  {
    title: "Cloud Essentials",
    issuer: "CompTIA",
    date: "2019/11",
  },
];
---

<WidgetLayout name={i18n(I18nKey.certificates)} id="certificate"  collapsedHeight={COLLAPSED_HEIGHT} class={className} style={style}>
  <div class="dark:text-white mx-2">
    {certificates.map((certificate) => (
      <li class="flex gap-4">
        <dl class="mt-2 flex flex-auto flex-wrap gap-x-2">
          <dt class="sr-only">Certificate</dt>
          <dd class="text-md w-full flex-none font-medium text-zinc-900 dark:text-zinc-100">
            {certificate.link ? (
              <a href={certificate.link} target="_blank" class="hover:underline underline-offset-4 decoration-[var(--link-underline)] decoration-1 decoration-dashed">
                {certificate.title}
              </a>
            ) : (
              <span>{certificate.title}</span>
            )}
          </dd>
          <dt class="sr-only">Role</dt>
          <dd class="mb-4 text-xs text-zinc-500 dark:text-zinc-400">
            {certificate.issuer}
          </dd>
          <dt class="sr-only">Date</dt>
          <dd class="ml-auto text-xs text-zinc-400 dark:text-zinc-500">
            {certificate.date}
          </dd>
        </dl>
      </li>
    ))}
  </div>
</WidgetLayout>